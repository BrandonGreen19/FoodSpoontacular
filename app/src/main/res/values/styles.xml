<resources>

    <style name="almondButton" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/rounded_corner_almond</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">12dp</item>
    </style>

        <!-- Base application theme. -->
    <style name="GardenTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:editTextBackground">@drawable/rounded_corner_light_green</item>
        <item name="android:buttonStyle">@style/almondButton</item>
        <item name="android:editTextColor">@color/colorText</item>
    </style>

    <style name="navyButton" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/rounded_corner_navy</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SubmarineTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:editTextBackground">@drawable/rounded_corner_bright_blue</item>
        <item name="android:editTextColor">@color/colorBlack</item>
        <item name="android:buttonStyle">@style/navyButton</item>
    </style>

    <style name="greyButton" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/rounded_corner_grey</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MonochromeTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="colorPrimaryDark">@color/colorDarkGrey</item>
        <item name="colorAccent">@color/colorOtherGrey</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:editTextBackground">@drawable/rounded_corner_white</item>
        <item name="android:editTextColor">@color/colorBlack</item>
        <item name="android:buttonStyle">@style/greyButton</item>
    </style>

</resources>
